    agent { docker '32bit/ubuntu:16.04' }
    stages {
        stage('Build') {
            steps {
                sh 'echo "Build!!!!!!!!!"'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Test!!!!!!!!!"'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploy!!!!!!!!!"'
            }
        }
    }
}